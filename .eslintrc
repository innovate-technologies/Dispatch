{
  "parser": "babel-eslint",

  "rules": {
    "indent": [2, 4, { "SwitchCase": 1 }],
    "quotes": [2, "double", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": 0,
    "no-console": 0,
    "no-debugger": 1,
    "no-extra-semi": 2,
    "curly": 2,
    "dot-notation": 2,
    "dot-location": [1, "property"],
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 1,
    "no-else-return": 2,
    "no-multi-spaces": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-unused-vars": 2,
    "comma-dangle": [1, "always-multiline"],
    "no-extra-boolean-cast": 1,
    "no-with": 2,
    "radix": 2,

    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": [2, { "properties": "always" }],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "eol-last": 1,
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "new-cap": [2, {
      "newIsCap": true
    }],
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-extra-parens": [2, "functions"],
    "no-underscore-dangle": 0,
    "one-var": [1, "never"],
    "semi-spacing": [2, {
      "before": false,
      "after": true
    }],
    "keyword-spacing": 2,
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [1, { "anonymous": "always", "named": "never" }],
    "space-infix-ops": 2,
    "spaced-comment": [1, "always", {
      "exceptions": ["-", "+", "/", "@ngInject"]
    }],

    "no-cond-assign": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "no-eval": 1,
    "no-loop-func": 2,
    "no-undef": 2,
    "no-constant-condition": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-octal": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,

    "callback-return": [2, ["callback", "cb", "next"]],
    "handle-callback-err": [2, "^(err|error)$" ],
    "no-new-require": 2,
    "no-sync": 0
  },

  "ecmaFeatures": {
    "modules": true
  },

  "env": {
    "node": true,
    "es6": true
  },

  "globals": {
    "log": true,
    "requireFromRoot": true,
    "config": true
  },

  "import/resolver": "node",

  "extends": ["eslint:recommended", "import/warnings", "import/es7-jsx"]
}
